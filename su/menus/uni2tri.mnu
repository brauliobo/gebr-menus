    <parameters default-selection="0" selection="">
      <parameter>
        <label>Number of samples in first (fast) dimension</label>
        <int>
          <property required="yes">
            <keyword>n1=</keyword>
            <value/>
            <default/>
          </property>
        </int>
      </parameter>
      <parameter>
        <label>Number of samples in second dimension</label>
        <int>
          <property required="yes">
            <keyword>n2=</keyword>
            <value/>
            <default/>
          </property>
        </int>
      </parameter>
      <parameter>
        <label>First dimension properties</label>
        <group instanciable="no" expand="no">
          <template-instance>
            <parameters default-selection="0" selection="">
              <parameter>
                <label>Sampling interval</label>
                <float>
                  <property required="no">
                    <keyword>d1=</keyword>
                    <value/>
                    <default>1.0</default>
                  </property>
                </float>
              </parameter>
              <parameter>
                <label>First value</label>
                <float>
                  <property required="no">
                    <keyword>f1=</keyword>
                    <value/>
                    <default>0.0</default>
                  </property>
                </float>
              </parameter>
            </parameters>
          </template-instance>
          <parameters default-selection="0" selection="">
            <parameter>
              <label/>
              <reference>
                <property required="no">
                  <keyword/>
                  <value/>
                  <default>1.0</default>
                </property>
              </reference>
            </parameter>
            <parameter>
              <label/>
              <reference>
                <property required="no">
                  <keyword/>
                  <value/>
                  <default>0.0</default>
                </property>
              </reference>
            </parameter>
          </parameters>
        </group>
      </parameter>
      <parameter>
        <label>Second dimension properties</label>
        <group instanciable="no" expand="no">
          <template-instance>
            <parameters default-selection="0" selection="">
              <parameter>
                <label>Sampling interval</label>
                <float>
                  <property required="no">
                    <keyword>d2=</keyword>
                    <value/>
                    <default>1.0</default>
                  </property>
                </float>
              </parameter>
              <parameter>
                <label>First value</label>
                <float>
                  <property required="no">
                    <keyword>f2=</keyword>
                    <value/>
                    <default>0.0</default>
                  </property>
                </float>
              </parameter>
            </parameters>
          </template-instance>
          <parameters default-selection="0" selection="">
            <parameter>
              <label/>
              <reference>
                <property required="no">
                  <keyword/>
                  <value/>
                  <default>1.0</default>
                </property>
              </reference>
            </parameter>
            <parameter>
              <label/>
              <reference>
                <property required="no">
                  <keyword/>
                  <value/>
                  <default>0.0</default>
                </property>
              </reference>
            </parameter>
          </parameters>
        </group>
      </parameter>
      <parameter>
        <label>Triangulated model file used as initial model</label>
        <file directory="no">
          <property required="no">
            <keyword>ifile=</keyword>
            <value/>
            <default/>
          </property>
        </file>
      </parameter>
      <parameter>
        <label>Maximum sloth error</label>
        <float>
          <property required="no">
            <keyword>errmax=</keyword>
            <value/>
            <default/>
          </property>
        </float>
      </parameter>
      <parameter>
        <label>Filename for error file</label>
        <file directory="no">
          <property required="no">
            <keyword>efile=</keyword>
            <value/>
            <default/>
          </property>
        </file>
      </parameter>
      <parameter>
        <label>Verbose mode</label>
        <enum>
          <property required="no">
            <keyword>verbose=</keyword>
            <value/>
            <default/>
          </property>
          <option>
            <label>Quiet</label>
            <value>0</value>
          </option>
          <option>
            <label>Report maximum error at each stage to stderr</label>
            <value>1</value>
          </option>
          <option>
            <label>Same as above, but also write the normalized error to file</label>
            <value>2</value>
          </option>
        </enum>
      </parameter>
      <parameter>
        <label>Output every mm-th intermediate model (0 for none)</label>
        <int>
          <property required="no">
            <keyword>mm=</keyword>
            <value/>
            <default>0</default>
          </property>
        </int>
      </parameter>
      <parameter>
        <label>Intermediate models written to integer model</label>
        <file directory="no" filter-name="" filter-pattern="">
          <property required="no">
            <keyword>mfile=</keyword>
            <value/>
            <default/>
          </property>
        </file>
      </parameter>
      <parameter>
        <label>Method</label>
        <enum>
          <property required="no">
            <keyword>method=</keyword>
            <value/>
            <default/>
          </property>
          <option>
            <label>Add 1 vertex at maximum error</label>
            <value>1</value>
          </option>
          <option>
            <label>Add vertex to every triangle that exceeds Maximum sloth error</label>
            <value>2</value>
          </option>
          <option>
            <label>Same as above, but avoid closely spaced vertices</label>
            <value>3</value>
          </option>
        </enum>
      </parameter>
      <parameter>
        <label>Closeness criterion for (in samples)</label>
        <int>
          <property required="no">
            <keyword>tol=</keyword>
            <value/>
            <default>10</default>
          </property>
        </int>
      </parameter>
      <parameter>
        <label>Fill closed regions</label>
        <string>
          <property required="no">
            <keyword>sfill=</keyword>
            <value/>
            <default/>
          </property>
        </string>
      </parameter>
    </parameters>
  </program>

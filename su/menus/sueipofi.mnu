    <parameters default-selection="0" selection="">
      <parameter>
        <label>Time sampling intervall in seconds</label>
        <int>
          <property required="no">
            <keyword>dt=</keyword>
            <value/>
            <default/>
          </property>
        </int>
      </parameter>
      <parameter>
        <label>SVD time window length in seconds</label>
        <float>
          <property required="no">
            <keyword>wl=</keyword>
            <value/>
            <default/>
          </property>
        </float>
      </parameter>
      <parameter>
        <label>Exponent of filter weights</label>
        <float>
          <property required="no">
            <keyword>pwr=</keyword>
            <value/>
            <default/>
          </property>
        </float>
      </parameter>
      <parameter>
        <label>Interpolation between initially calculated weights</label>
        <enum>
          <property required="no">
            <keyword>interp=</keyword>
            <value/>
            <default/>
          </property>
          <option>
            <label>Linear</label>
            <value>linear</value>
          </option>
          <option>
            <label>Cubic</label>
            <value>cubic</value>
          </option>
        </enum>
      </parameter>
      <parameter>
        <label>Base name for additional output file(s) of filter weights</label>
        <string>
          <property required="no">
            <keyword>file=</keyword>
            <value/>
            <default/>
          </property>
        </string>
      </parameter>
      <parameter>
        <label>Assume rectilinearity along first principal axis</label>
        <flag>
          <property required="no">
            <keyword>rl1=1</keyword>
            <value>off</value>
            <default>off</default>
          </property>
        </flag>
      </parameter>
      <parameter>
        <label>Assume rectilinearity along second principal axis</label>
        <flag>
          <property required="no">
            <keyword>rl2=1</keyword>
            <value>off</value>
            <default>off</default>
          </property>
        </flag>
      </parameter>
      <parameter>
        <label>Assume planarity</label>
        <flag>
          <property required="no">
            <keyword>pln=1</keyword>
            <value>off</value>
            <default>off</default>
          </property>
        </flag>
      </parameter>
      <parameter>
        <label>Echoes information</label>
        <flag>
          <property required="no">
            <keyword>verbose=1</keyword>
            <value>off</value>
            <default>off</default>
          </property>
        </flag>
      </parameter>
    </parameters>
  </program>

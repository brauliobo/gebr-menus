        <group instanciable="no" expand="no">
          <template-instance><parameters default-selection="0" selection="">
            <parameter>
              <label>1st dimension</label>
              <float>
                <property required="no">
                  <keyword>d1=</keyword>
                  <value/>
                  <default>1.0</default>
                </property>
              </float>
            </parameter>
            <parameter>
              <label>2nd dimension</label>
              <float>
                <property required="no">
                  <keyword>d2=</keyword>
                  <value/>
                  <default>1.0</default>
                </property>
              </float>
            </parameter>
            <parameter>
              <label>3rd dimension</label>
              <float>
                <property required="no">
                  <keyword>d3=</keyword>
                  <value/>
                  <default>1.0</default>
                </property>
              </float>
            </parameter>
          </parameters></template-instance>
        <parameters default-selection="0" selection="">
            <parameter>
              <label>1st dimension</label>
              <float>
                <property required="no">
                  <keyword>d1=</keyword>
                  <value/>

              <float>
                <property required="no">
                  <keyword>d3=</keyword>
                  <value/>
                  <default>1.0</default>
                </property>
              </float>
            </parameter>
          </parameters></group>
      </parameter>
      <parameter>
        <label>Number of iterations used</label>
        <int>
          <property required="no">
            <keyword>iter=</keyword>
            <value/>
            <default>2</default>
          </property>
        </int>
      </parameter>
      <parameter>

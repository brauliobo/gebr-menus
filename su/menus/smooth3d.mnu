          </property>
        </float>
      </parameter>
      <parameter>
        <label>Velocity values above it are cliped before smoothing</label>
        <float>
          <property required="no">
            <keyword>vmaxc=</keyword>
            <value/>
            <default>99999</default>
          </property>
        </float>
      </parameter>
    </parameters>

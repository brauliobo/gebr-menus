                </property>
              </float>
            </parameter>
          </parameters></template-instance>
        <parameters default-selection="0" selection="">
            <parameter>
              <label>1st dimension</label>
              <float>
                <property required="no">
                  <keyword>r1=</keyword>
                  <value/>
                  <default>0.0</default>
                </property>
              </float>
            </parameter>
            <parameter>
              <label>2nd dimension</label>
              <float>
                <property required="no">
                  <keyword>r2=</keyword>
                  <value/>
                  <default>0.0</default>
                </property>
              </float>
            </parameter>
            <parameter>
              <label>3rd dimension</label>
              <float>
                <property required="no">
                  <keyword>r3=</keyword>
                  <value/>
                  <default>0.0</default>
                </property>
              </float>
            </parameter>
          </parameters></group>
      </parameter>
